<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>/opt/hadoop/hdfs/datanode</value>
        <final>true</final>
    </property>
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>/opt/hadoop/hdfs/namenode</value>
        <final>true</final>
    </property>
    <property>
        <name>dfs.namenode.http-address</name>
        <value>master:30001</value>
    </property>
    <property>
        <name>dfs.namenode.secondary.http-address</name>
        <value>master:30007</value>
    </property>
    <property>
        <name>dfs.datanode.address</name>
        <value>master:30008</value>
    </property>
    <property>
        <name>dfs.datanode.http.address</name>
        <value>master:30009</value>
    </property>
    <property>
        <name>dfs.datanode.https.address</name>
        <value>master:30010</value>
    </property>
    <property>
        <name>dfs.datanode.ipc.address</name>
        <value>master:30011</value>
    </property>
    <property>
        <name>dfs.namenode.http-address</name>
        <value>master:30012</value>
    </property>
    <property>
        <name>dfs.namenode.rpc-address</name>
        <value>master:30013</value>
    </property>
    
    <property>
        <name>dfs.replication</name>
        <value>2</value>
    </property>
    <property>
        <name>dfs.namenode.rpc-bind-host</name>
        <value>0.0.0.0</value>
        <description>
            controls what IP address the NameNode binds to.
            0.0.0.0 means all available.
        </description>
    </property>
</configuration>


